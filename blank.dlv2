% place where Types AND Colors highest
:~  not isEmpty,
    solution(X,Y),
    emptyCellProperties(X,Y,Neighbors,Completeness,Types,Colors,Empty),
    Pay = Completeness + 8 - Types - Colors. [Pay@9]


